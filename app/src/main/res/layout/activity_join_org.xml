<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinOrgActivity">

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal"
        android:maxLength="30"
        android:maxLines="3"
        android:text="Join Org"
        android:textAlignment="center"
        android:textAppearance="@style/apr"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/managerButton2"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttonbg"
        android:gravity="center_horizontal|center_vertical"
        android:text="Go"
        android:textAppearance="@style/mark_attend"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailInput2"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintBottom_toTopOf="@+id/managerButton2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="218dp"
        android:layout_height="33dp"
        android:layout_marginStart="72dp"
        android:gravity="center_vertical"
        android:text="Unique Code"
        android:textAppearance="@style/textHeader"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/emailInput2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>