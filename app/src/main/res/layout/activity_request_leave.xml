<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RequestLeave">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:background="@drawable/rectangle_1">
        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="151dp"
            android:layout_height="26dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/inter"
            android:gravity="center_vertical"
            android:text="@string/requestLeave"
            android:textAppearance="@style/login"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/startDateLabel"
        android:layout_width="218dp"
        android:layout_height="33dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="98dp"
        android:text="Start Date"
        android:textAppearance="@style/textHeader"
        android:textSize="14sp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/startDate"
        android:paddingLeft="2dp"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle_2" />
    <Button
        android:id="@+id/pickStartDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="7dp"
        android:text="Pick Start Date" />

    <TextView
        android:id="@+id/endDateLabel"
        android:layout_width="218dp"
        android:layout_height="33dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="9dp"
        android:text="End Date"
        android:textSize="14sp"
        android:textAppearance="@style/textHeader"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/endDate"
        android:paddingStart="2dp"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle_2" />
    <Button
        android:id="@+id/pickEndDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="7dp"
        android:text="Pick End Date" />
    <TextView
        android:id="@+id/messageLabel"
        android:layout_width="218dp"
        android:layout_height="33dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="7dp"
        android:text="Message"
        android:textAppearance="@style/textHeader"
        android:textSize="14sp"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/message"
        android:paddingLeft="2dp"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle_2" />

    <TextView
        android:id="@+id/requestButton"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/buttonbg"
        android:text="Submit Request"
        android:textAppearance="@style/primaryBigButton"
        android:gravity="center_horizontal|center_vertical"
        />



</LinearLayout>