<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FaceAttend" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryButton</item>
        <item name="colorPrimaryVariant">#616161</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryButtonDark</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkerDark</item>
        <item name="colorOnSecondary">@color/OnSecondaryDark</item>
        <item name="colorPrimarySurface">@color/secondaryButtonDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondaryButtonDark</item>
        <item name="android:actionBarItemBackground">@color/secondaryButtonDark</item>
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@color/primaryButton</item>
        <item name="android:colorAccent">@color/primaryButton</item>

    </style>
    <style name="Theme.NoActionBar" parent="Theme.FaceAttend">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Theme.FaceAttend.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@color/secondaryDarkerDark</item>
        <item name="colorSecondary">@color/primaryButton</item>
        <item name="colorAccent">@color/primaryButton</item>
        <item name="colorOnPrimary">@color/primaryButton</item>
        <!--        <item name="colorPrimarySurface">@color/primaryButton</item>-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="Theme.NoActionBar.NoActionBar" parent="Theme.NoActionBar">
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>